<%- include('./header') %>
<%- include('../partials/form-errors') %>

<div class="container">
  <div class="auth-form">
      <h1>Enter Customer Information</h1>
  <form action="/customer/create" method="POST">
  <input type="hidden" name="_csrf" value="<%= csrfToken %>">
  
  <div class="form-group">
    <label for="name">Customer Name</label>
    <input 
      type="name" 
      id="name" 
      name="name" 
      value="<%= typeof customerData !== 'undefined' ? customerData.name || '' : '' %>"
      placeholder="Choose a username (3-20 characters)"
      required
      maxlength="20"
    >
  </div>
  
  <div class="form-group">
    <label for="email">Customer Email Address</label>
    <input 
      type="email" 
      id="email" 
      name="email"
      value="<%= typeof customerData !== 'undefined' ? customerData.email || '' : '' %>"
      placeholder="Enter your email address"
      required
    >
  </div>
  
  <div class="form-group">
    <label for="phone">Customer Phone Number</label>
    <input 
      type="phone" 
      id="phone" 
      name="phone"
      value = "<%= typeof customerData !== 'undefined' ? customerData.phone || '' : '' %>"
      placeholder="Enter your phone number"
      required
      maxlength="20"
    >
  </div>
  
  <div class="form-group">
    <label for="company">Customer Company</label>
    <input 
      type="company" 
      id="company" 
      name="company"
      value = "<%= typeof customerData !== 'undefined' ? customerData.company || '' : '' %>"
      placeholder="Enter company name"
      required
      maxlength="25"
    >
  </div>
  
  <div class="form-group">
    <label for="address">Company Address</label>
    <input 
      type="address" 
      id="address" 
      name="address"
      value = "<%= typeof customerData !== 'undefined' ? customerData.address || '' : '' %>"
      placeholder="Enter location of company"
      required
      maxlength="25"
    >
  </div>

  <div class="form-group">
    <label for="status">Customer Status</label>
    <input 
      type="status" 
      id="status" 
      name="status"
      value = "<%= typeof customerData !== 'undefined' ? customerData.status || '' : '' %>"
      placeholder="Enter your status within the company"
      required
    >
  </div>

  <div class="form-actions">
    <button type="submit" class="btn primary-btn">Register</button>
  </div>
</form>
  </div>
</div>
<%- include('../partials/footer') %>