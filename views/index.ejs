<%- include('./partials/header') %>

<div class="container">
  <% if (isAuthenticated) { %>
    <!-- Only show the action buttons when authenticated -->
   
  <% } else { %>
    <div class="welcome-section">
      <h1>Welcome to ClientSphere</h1>
      <div class="action-buttons"></div>
        <a href="/user/profile" class="btn primary-btn">View Profile</a>
      </div>
    </div>    <div class="welcome-section">
      <h1>
        <%= message %>
      </h1>
      <p>ClientSphere is a CRM built using HMTL, CSS, and MongoDB, designed to be lightweight and responsive.</p>
      <div class="action-buttons">
        <a href="/auth/login" class="btn primary-btn">Login</a>
        <a href="/auth/register" class="btn secondary-btn">Register</a>
      </div>
    </div>
    
    <div class="features-section">
      <h2>Features</h2>
      <div class="feature-grid">
        <div class="feature-card">
          <h3>Contact & Account Management</h3>
          <p>Use a centralized database of customer and prospect records, including</p>
          <ul>
            <li>Basic details (name, company, role, contact info)</li>
            <li>View a simple history log of interactions</li>
          </ul>
        </div>
        <div class="feature-card">
          <h3>Basic Dashboard/Reports</h3>
          <p>Counts of leads by status</p>
          <p>Graph or table of won vs. lost deals over time</p>
        </div>
      </div>
    </div>
  <% } %>
</div>

<%- include('./partials/footer') %>
